<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Vim (Default)">
  <!--
  Based on the default vim theme for a dark background, Linux console colors.
  -->
  <style name="AddedLine" foreground="#55ffff"/>
  <style name="Alert" foreground="#008000" bold="true"/>
  <style name="Binding" foreground="#ff5555"/>
  <style name="Comment" foreground="#55ffff"/>
  <style name="CurrentLine" background="#232323"/>
  <style name="CurrentLineNumber" foreground="#aaaaaa" bold="true"/>
  <style name="DiffFile" foreground="#55ff55"/>
  <style name="DiffLocation" foreground="#ffff55"/>
  <style name="DisabledCode" foreground="#777777" background="#222222"/>
  <style name="Doxygen.Comment" foreground="#00a0a0"/>
  <style name="Doxygen.Tag" foreground="#0095ff"/>
  <style name="Error" foreground="#ff0000"/>
  <style name="Extension" foreground="#0095ff"/>
  <style name="Field"/>
  <style name="Function" foreground="#aabbff"/> <!-- MPI Functions -->
  <style name="Keyword" foreground="#ffff55"/>
  <style name="Label" foreground="#ffff55"/>
  <style name="LineNumber" foreground="#888888" background="#232323"/>
  <style name="Link" foreground="#0055ff"/>
  <style name="Local"/>
  <style name="Number" foreground="#ff55ff"/>
  <style name="Occurrences" background="#363636"/>
  <style name="Occurrences.Rename" foreground="#ffaaaa" background="#553636"/>
  <style name="Occurrences.Unused" foreground="#ffff55"/>
  <style name="Operator" foreground="#aaaaaa"/>
  <style name="Others" foreground="#55ff55"/>
  <style name="Parentheses" foreground="#ff5555" background="#333333"/>
  <style name="Preprocessor" foreground="#5555ff"/>
  <style name="RegionMarker" foreground="#0057ae" background="#dfe9f7"/>
  <style name="RemovedLine" foreground="#ff5555"/>
  <style name="SearchResult" background="#555500"/>
  <style name="SearchScope" background="#222200"/>
  <style name="Selection" foreground="#000000" background="#aaaaaa"/>
  <style name="Static" foreground="#55ff55" italic="true"/>
  <style name="String" foreground="#ff55ff"/>
  <style name="Text" foreground="#aaaaaa" background="#000000"/>
  <style name="Type" foreground="#ffff55"/>
  <style name="VirtualMethod" italic="true"/>
  <style name="VisualWhitespace" foreground="#c0c0c0" background="#000000"/>
  
  <!-- Time Glyph colours. Used in the PSV and code-view -->
  
  <!-- foreground=Normal-time in TimeGlyphs, background=Rescaled normal-time in TimeGlyphs -->
  <style name="SpecialLine1" foreground="#bb0000" background="#ffff00"/>
  <!-- foreground=MPI-time in TimeGlyphs, background=Rescaled MPI-time in TimeGlyphs -->
  <style name="SpecialLine2" foreground="#aabbff" background="#ffdd00"/>
  <!-- foreground=OpenMP-time in TimeGlyphs, background=Rescaled MPI-time in TimeGlyphs -->
  <style name="SpecialLine13" foreground="#ff8000" background="#990000"/>
  <!-- foreground=Accelerator-time in TimeGlyphs, background=Rescaled MPI-time in TimeGlyphs -->
  <style name="SpecialLine14" foreground="#ff007f" background="#999900"/>
  <!-- foreground=Other-time in TimeGlyphs, background=Rescaled MPI-time in TimeGlyphs -->
  <style name="SpecialLine15" foreground="#ffff00" background="#ffff99"/>
  <!-- SpecialLine16 reserved for future TimeGlyph colours -->
  <!-- SpecialLine17 reserved for future TimeGlyph colours -->
  <!-- SpecialLine18 reserved for future TimeGlyph colours -->
  
  <!-- foreground=Background in TimeGlyphs, background=Sleeping-time in TimeGlyphs -->
  <style name="SpecialLine3" foreground="#555555" background="#808080"/>
  
  <!-- Line highlight colour to use in MAP when 100% of samples hit a line.
       The background colour gets faded out to the "Text" background colour 
       for lesser percentages of hits. -->
  <style name="SpecialLine4" background="#7fbeff"/> 
  
  <!-- Metric graph colours -->
  <style name="SpecialLine5" foreground="#0000ff" background="#ffffff"/> <!-- MPI -->
  <style name="SpecialLine6" foreground="#00ff00" background="#ffffff"/> <!-- CPU -->
  <style name="SpecialLine7" foreground="#ff0000" background="#ffffff"/> <!-- Memory -->
  <style name="SpecialLine8" foreground="#ff8c14" background="#ffffff"/> <!-- I/O -->

  <!-- SpecialLine9 reserved for future metrics -->
  <!-- SpecialLine10 reserved for future metrics -->
  <!-- SpecialLine11 reserved for future metrics -->
  <!-- SpecialLine12 reserved for future metrics -->
  
  <!-- NB: SpecialLines 13-18 (inclusive) used or reserved for TimeGlyph colours -->

</style-scheme>
